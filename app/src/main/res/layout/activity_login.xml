<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/card_bg"
    android:orientation="vertical">

    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusedByDefault="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:src="@drawable/bank_icon"/>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:background="@drawable/white_round">

            <TextView
                android:fontFamily="@font/sfnsdisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="22.6sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/maven_pro_regular"
                android:text="Please sign in to continue."
                android:textColor="#444444"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_marginTop="32.8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/et_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/creditcard"
                    app:tint="@color/green_dark"
                    android:padding="2dp"
                    android:layout_marginStart="10dp"/>

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Card No"
                    android:maxLength="16"
                    android:text="5555555555554444"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/green_dark"
                    android:textColorHint="#d3d3d3" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12.8dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/et_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/lock"
                    app:tint="@color/green_dark"
                    android:padding="3dp"
                    android:layout_marginStart="10dp"/>

                <EditText
                    android:id="@+id/login_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Password"
                    android:text="123456"
                    android:layout_marginStart="10dp"
                    android:inputType="textPassword"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/green_dark"
                    android:textColorHint="#d3d3d3" />

            </LinearLayout>


            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_bg"
                android:text="Login"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>


    </LinearLayout>


</ScrollView>

